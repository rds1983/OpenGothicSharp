<Project>
  <Project.ExportOptions Namespace="OpenGothic.Viewer.UI" Class="MainPanel" OutputPath="D:\Projects\OpenGothicSharp\OpenGothic.Viewer\UI" />
  <Panel>
    <HorizontalSplitPane Id="_topSplitPane">
      <VerticalStackPanel>
        <TextBox HintText="Filter" Id="_textBoxFilter" />
        <HorizontalStackPanel Spacing="8">
          <CheckButton IsChecked="True" CheckContentSpacing="4" Id="_checkMsbFilter">
            <Label Text="*.MSB" />
          </CheckButton>
          <CheckButton CheckContentSpacing="4" Id="_checkMrmFilter">
            <Label Text="*.MRM" />
          </CheckButton>
          <CheckButton IsChecked="True" CheckContentSpacing="4" Id="_checkZenFilter">
            <Label Text="*.ZEN" />
          </CheckButton>
        </HorizontalStackPanel>
        <HorizontalSeparator IsAnisotropicFiltering="False" />
        <ListView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Id="_listItems" StackPanel.ProportionType="Fill" />
      </VerticalStackPanel>
      <Panel>
        <Panel Id="_panelViewer" />
        <Label Text="10, 10, 10" Left="-4" Top="4" HorizontalAlignment="Right" Id="_labelCameraPosition" />
        <Button VerticalAlignment="Bottom" Id="_buttonOptions">
          <Label Text="/c[red]O/cdptions" />
        </Button>
      </Panel>
    </HorizontalSplitPane>
    <Grid ColumnSpacing="8" HorizontalAlignment="Right" VerticalAlignment="Bottom" Left="-4" Id="_panelStatistics">
      <Grid.DefaultRowProportion Type="Auto" />
      <Grid.ColumnsProportions>
        <Proportion Type="Auto" />
        <Proportion Type="Fill" />
      </Grid.ColumnsProportions>
      <Label Text="FPS:" />
      <Label Text="Effects Switches:" Grid.Row="1" />
      <Label Text="Draw Calls:" Grid.Row="2" />
      <Label Text="Vertices Drawn:" Grid.Row="3" />
      <Label Text="Primitives Drawn:" Grid.Row="4" />
      <Label Text="Passes:" Grid.Row="5" />
      <Label Text="10" Id="_labelFPS" Grid.Column="1" />
      <Label Text="10" Id="_labelEffectsSwitches" Grid.Column="1" Grid.Row="1" />
      <Label Text="10" Id="_labelDrawCalls" Grid.Column="1" Grid.Row="2" />
      <Label Text="10" Id="_labelVerticesDrawn" Grid.Column="1" Grid.Row="3" />
      <Label Text="10" Id="_labelPrimitivesDrawn" Grid.Column="1" Grid.Row="4" />
      <Label Text="10" Id="_labelPasses" Grid.Column="1" Grid.Row="5" />
    </Grid>
  </Panel>
</Project>